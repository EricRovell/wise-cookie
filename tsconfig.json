{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "types": [ "jest", "node", "svelte" ],
    "removeComments": true,
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@src/*": [ "src/*"],
      "@public/*": [ "public/*" ],
      "@app/*": [ "src/app/*" ],
      "#types": [ "src/types/index.ts" ],
      "@layout/*": [ "src/layout/*" ],
      "@routes/*": [ "src/routes/*" ],
      "@components/*": [ "src/components/*" ],
      "@util/*": [ "src/util/*" ],
      "@stores/*": [ "src/stores/*" ]
    }
  }
}
